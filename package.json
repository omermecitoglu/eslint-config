{
  "name": "@omer-x/eslint-config",
  "version": "2.0.0",
  "description": "My favorite eslint rules",
  "keywords": [
    "eslint-config",
    "shareable-config"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omermecitoglu/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/omermecitoglu/eslint-config/issues"
  },
  "homepage": "https://github.com/omermecitoglu/eslint-config#readme",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Omer Mecitoglu",
    "email": "omer.mecitoglu@gmail.com",
    "url": "https://omermecitoglu.github.io"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/configs/base.js",
      "types": "./dist/configs/base.d.ts"
    },
    "./stylistic": {
      "import": "./dist/configs/stylistic.js",
      "types": "./dist/configs/stylistic.d.ts"
    },
    "./typescript": {
      "import": "./dist/configs/typescript.js",
      "types": "./dist/configs/typescript.d.ts"
    },
    "./react": {
      "import": "./dist/configs/react.js",
      "types": "./dist/configs/react.d.ts"
    },
    "./jsx-a11y": {
      "import": "./dist/configs/jsx-a11y.js",
      "types": "./dist/configs/jsx-a11y.d.ts"
    },
    "./import": {
      "import": "./dist/configs/import.js",
      "types": "./dist/configs/import.d.ts"
    },
    "./unused-imports": {
      "import": "./dist/configs/unused-imports.js",
      "types": "./dist/configs/unused-imports.d.ts"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint"
  },
  "peerDependencies": {
    "@next/eslint-plugin-next": "*",
    "eslint": "^9",
    "eslint-plugin-jsx-a11y": "**",
    "eslint-plugin-react": "*"
  },
  "peerDependenciesMeta": {
    "@next/eslint-plugin-next": {
      "optional": true
    },
    "eslint-plugin-jsx-a11y": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    }
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^8",
    "eslint-plugin-import": "^2",
    "eslint-plugin-unused-imports": "^4",
    "typescript-eslint": "^8"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^16.1.6",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/node": "^25.2.1",
    "eslint": "^10.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "typescript": "^5.9.3"
  }
}

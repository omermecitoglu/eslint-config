{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "plugins": [
    ],
    "paths": {
      "~/*": ["./src/*"]
    },
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "configs",
  ],
}
